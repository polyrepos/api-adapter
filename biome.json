{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"include": ["./*.ts", "/*.tsx", "./**/*.tsx", "./**/*.ts"],
		"ignore": [
			"node_modules",
			"*.json",
			"dist",
			".husky",
			".github",
			".git",
			"*.js"
		]
	}
}
