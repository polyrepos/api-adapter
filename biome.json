{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedVariables": "error",
				"noUnusedImports": "error",
				"noUnusedLabels": "error"
			}
		}
	},
	"files": {
		"include": ["./*.ts", "/*.tsx", "./**/*.tsx", "./**/*.ts"],
		"ignore": [
			"node_modules",
			"*.json",
			"dist",
			".husky",
			".github",
			".git",
			"*.js"
		]
	}
}
